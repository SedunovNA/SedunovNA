/*
 * Вычислить выражение 1-1/2+1/3-1/4++1/9999-1/10000, используя оператор условия
 */


/**
 *
 * @author sedunov
 */
public class Main {
	public static void main(String[] args) {
		System.out.println("Вычислить выражение 1-1/2+1/3-1/4++1/9999-1/10000, используя оператор условия");
		double x=0;
        for (int n=1; n<=10000; n++)
        if (n%2==0)
        x-=1/n;
        else
        x+=1/n;
        System.out.println("выражение = " +x);
    }
}
