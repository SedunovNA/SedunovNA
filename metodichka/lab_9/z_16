public class HelloWorld {
	public static void main(String[] args) {
        int i = 0, sum = 0;
        while (i < 4) {
          i++;
          if (i % 3 == 0) break;
            sum += i;
           
        }
        System.out.println("вывод " + sum);
        System.out.println("------------------------------- ");
        
        sum = 0;
        for (i = 0; i < 4; i++) {
          if (i % 3 == 0) continue;
            sum += i;
        }
        System.out.println("вывод " + sum);
	}
}
